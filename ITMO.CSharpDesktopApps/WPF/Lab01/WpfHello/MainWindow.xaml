<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="MyTitle" Height="350" Width="500" MinHeight="350" MinWidth="300" Closing="Window_Closing">
    <Grid>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="MenuItem_Click_1"/>
            </MenuItem>
        </Menu>
        <Label x:Name="lbl" HorizontalAlignment="Center" VerticalAlignment="Top">Пуск</Label>
        <Button Name="setBut" Content="Set Name" HorizontalAlignment="Left" Margin="110,110,0,0" VerticalAlignment="Top" Click="setBut_Click"/>
        <Button Name="retBut" Content="Ret Name" HorizontalAlignment="Left" Margin="110,220,0,0" VerticalAlignment="Top" Click="retBut_Click"/>
        <Label Name="retLabel" Content="" HorizontalAlignment="Left" Margin="110,250,0,0" VerticalAlignment="Top"/>
        <TextBox Name="setText" HorizontalAlignment="Left" Margin="330,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="setText_TextChanged"/>
    </Grid>
</Window>
